<?php

$finder = PhpCsFixer\Finder::create()
    ->in(__DIR__)
;

$config = new PhpCsFixer\Config();
return $config->setRules([
        '@PSR2' => true,
        'braces' => [
            'position_after_functions_and_oop_constructs' => 'same',
        ],
    ])
    ->setFinder($finder)
    ->setLineEnding("\n")
;
